{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "diagnostics": true,
    "outDir": "out",
    "rootDir": "src",
    "watch": true
  },
  "filesGlob": ["**/*.ts"],
  "exclude": ["node_modules"]
}
